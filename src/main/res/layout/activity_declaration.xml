<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.declaration.DeclarationActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<include layout="@layout/layout_title"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            style="@style/textview"
            android:textColor="@color/blue"
            android:id="@+id/tv_title1"
            android:text="条码扫描："
            />

        <ImageView
            android:id="@+id/iv_cwhcode"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_centerVertical="true"
            style="@style/edittext"
            android:id="@+id/et_cwhcode"
            android:layout_toRightOf="@id/tv_title1"
            android:layout_toLeftOf="@id/iv_cwhcode"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="工单号："
            style="@style/textview"
            />
        <TextView


            style="@style/textview" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="当前工序："
            style="@style/textview"
            />
        <TextView


            style="@style/textview" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="操作员："
            style="@style/textview"
            />
        <EditText
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_gravity="center_vertical"
            style="@style/edittext"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="工单数量："
            style="@style/textview"
            />
        <TextView


            style="@style/textview" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="完工合格数量 ："
            style="@style/textview"
            />
        <EditText
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_gravity="center_vertical"
            style="@style/edittext" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="托盘号/挂架号："
            style="@style/textview"
            />
        <EditText
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_gravity="center_vertical"
            style="@style/edittext" />
    </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/b_submit"
        android:id="@+id/b_material"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:background="@color/blue"
        android:textColor="@android:color/white"
        android:text="投料"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</RelativeLayout>